@using CvProject.Models.Entity
@model  List<Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Deneyimler</h2>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        @*<th>Açıklama</th>*@
        <th>Tarih</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>
            @*<td>@item.Description</td>*@
            <td>@item.Date</td>
            <td>
                <a href="/Experiences/DeleteExperience/@item.Id" class="btn btn-danger">Sil</a> 
                <a href="/Experiences/UpdateExperience/@item.Id" class="btn btn-success">Düzenle</a>
            </td>
        </tr>
    }
</table>

<a href="/Experiences/AddExperience" class="btn btn-primary">Deneyim Ekle</a>