@using CvProject.Models.Entity
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<a href="/Admin/AddAdmin/" class="btn btn-primary">Yönetici Ekle</a>
<br />
<br />



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>     
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Username</td>
           
            <td>
                <a href="/Admin/DeleteAdmin//@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/UpdateAdmin//@item.Id" class="btn btn-success">Düzenle</a>
            </td>
        </tr>
    }
</table>

